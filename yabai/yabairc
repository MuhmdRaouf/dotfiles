#!/usr/bin/env zsh

set -euo pipefail

#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
#"""                                Settings                                  """
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
source "$XDG_CONFIG_HOME/yabai/settings"
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
#"""                                  Rules                                   """
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
source "$XDG_CONFIG_HOME/yabai/rules"
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
#"""                                Signals                                   """
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
source "$XDG_CONFIG_HOME/yabai/signals"
#""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

echo "yabai configuration loaded.."

